{
  "permissions": {
    "allow": [
      "Bash(export PATH=\"$HOME/.local/bin:$PATH\")"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": {"tools": ["Edit"]},
        "hooks": [{"type": "command", "command": "/quality"}]
      },
      {
        "matcher": {"tools": ["Write"]},
        "hooks": [{"type": "command", "command": "npm run lint:check {filename}"}]
      }
    ],
    "PostToolUse": [
      {
        "matcher": {"tools": ["Edit"]},
        "hooks": [{"type": "command", "command": "/commit-work Auto-commit: Updated {filename}"}]
      }
    ]
  },
  "mcpServers": [
    "jira",
    "slack",
    "github"
  ],
  "defaultBranch": "develop",
  "protectedBranches": [
    "main",
    "develop"
  ]
}